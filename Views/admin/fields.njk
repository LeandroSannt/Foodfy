<aside class="receitas">
    <div>
        <h3>Imagem da receita</h3>
        <input type="text" name="image" value="{{foundRecipes.image}}">
    </div>

    <div>
        <h3>Nome da receita</h3>
        <input type="text" name="title" value="{{foundRecipes.title}}">
    </div>

    <div>
        <h3>Criador da receita</h3>
        <input type="text" name="author"  value="{{foundRecipes.author}}">
    </div>

<div class="item">
    <div id="ingredients">
        <h3>Ingredientes</h3>
            <div class="ingredient">
                {% for ingredients in foundRecipes.ingredients %}
                <input type="text" name="ingredients[]" value="{{ingredients}}" id="addIngre">
                
                {%endfor%}
            </div>
    </div>
    </div>
    <p class="newIngre">+ Adicionar novo ingrediente</p>

<div class="item">
    <div id="preparation">
        <h3>Modo de preparo</h3>
            <div class="preparation">
                {% for preparation in foundRecipes.preparation %}
                 <input type="text" name="preparation[]" value="{{preparation}}" id="addPrep">
                {% endfor %}
            </div> 
    </div>
    </div>
    <p class="newPrep" >+ Adicionar novo passo</p>
    
