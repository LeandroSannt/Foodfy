{% extends "admin/layoutAdmin.njk" %}

{% block content %}
<form class ="card" method ="POST" action="/admin" >
        <section class="title">
            <div class="cabecalho">
                <h1>Criando Receita</h1>
                <button type="submit">Criar receita</button>
            </div>
                <aside class="receitas">
                    <div>
                        <h3>Imagem da receita</h3>
                        <input type="text" name="image" value="{{foundRecipes.image}}">
                    </div>

                    <div>
                        <h3>Nome da receita</h3>
                        <input type="text" name="title" value="{{foundRecipes.title}}">
                    </div>

                    <div>
                        <h3>Criador da receita</h3>
                        <input type="text" name="author"  value="{{foundRecipes.author}}">
                    </div>

                <div class="item">
                    <div id="ingredients">
                        <h3>Ingredientes</h3>
                            <div class="ingredient">
                            
                                <input type="text" name="ingredients[]" value="{{ingredients}}" id="addIngre">
                            
                            </div>
                    </div>
                    </div>
                    <p class="newIngre">+ Adicionar novo ingrediente</p>

                <div class="item">
                    <div id="preparation">
                        <h3>Modo de preparo</h3>
                            <div class="preparation">
                                
                            
                                <input type="text" name="preparation[]" value="{{preparation}}" id="addPrep">
                            
                            </div> 
                    </div>
                    </div>
                    <p class="newPrep" >+ Adicionar novo passo</p>
                    
                    <div class="item">
                    <div>
                    <h3>informa√ßoes adicionais</h3>
                    <textarea name="information"  cols="30" rows="10" n >
                        {{foundRecipes.information}}
                    </textarea>
                </div>
                </div>
            </aside>
    </section>  
</form>
{% endblock content %}