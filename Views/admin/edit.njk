{% extends "admin/layoutAdmin.njk" %}

{% block content %}


<div class ="card">
    <form  method ="POST" action="/admin?_method=PUT" >
    <section class="title">
        <div class="cabecalho">
            <h1>Criando Receita</h1>
            <button class="save" type="submit">Salvar receita</button>
        </div>
    <aside class="receitas">
            <div>
                <h3>Imagem da receita</h3>
                <input type="text" name="image" value="{{recipes.image}}">
            </div>

            <div>
                <h3>Nome da receita</h3>
                <input type="text" name="title" value="{{recipes.title}}">
            </div>

             <div>
                <h3>Criador da receita</h3>
                <input type="text" name="author"  value="{{recipes.author}}">
            </div>

             <div class="item">
                <div id="ingredients">
                    <h3>Ingredientes</h3>
                     {% for ingredients in recipes.ingredients %}
                        <div class="ingredient">
                             <input type="text" name="ingredients[]" value="{{ingredients}}" id="addIngre">
                        </div>
                        {%endfor%}
                </div>
            </div>
            <p class="newIngre">+ Adicionar novo ingrediente</p>

            <div class="item">
                <div id="preparation">
                    <h3>Modo de preparo</h3>
                    {% for preparation in recipes.preparation %}
                        <div class="preparation">
                                <input type="text" name="preparation[]" value="{{preparation}}" id="addPrep">
                        </div> 
                        {% endfor %}
                </div>
            </div>
            <p class="newPrep" >+ Adicionar novo passo</p>
                    
            <div class="item">
                <div>
                    <h3>informa√ßoes adicionais</h3>
                    <textarea name="information"  cols="30" rows="10" n >
                        {{recipes.information}}
                    </textarea>
                </div>
            </div>
            <input type="hidden" name="id" value="{{recipes.id}}">
    </aside>
    </section>  
</form>

<form id="form-delete"   method="POST" action="/admin?_method=DELETE">
    <button class="delete" type="submit">Deletar</button> 
    <input type="hidden" name="id" value ={{recipes.id}}>        
</form>


</div>
{% endblock content %}