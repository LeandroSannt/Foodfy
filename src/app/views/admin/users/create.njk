{% extends "foodfy/layout.njk" %}

{% block content %}
    <section class="container user-register form">
        <form class ="card" method ="POST" action="/admin/register" >
            <div class="header">
                <h3>Abra uma conta</h3>
            </div>
            <div class="fields">
                {%include "admin/users/fields.njk" %}
            </div>
            <div class="buttons">
                <a href="javascript:history.back()"> <img src="/icons/arrow-left.svg" alt="arrow"></a>
                <button class="button" type ="submit">Cadastrar</button>
            </div>
        </form>
        <input type="hidden" name="id"value={{user.id}}>
    </section>
{% endblock  %}