{% extends "admin/layoutAdmin.njk" %}

{% block content %}

    <section class="title">
        <div class="cabecalho">
            <h1>Usuários</h1>
            <a class ="createReceita" href="/admin/users/new">Cadastar Usuário</a>
        </div>

            <div class="card-user">
            {%for  user in users%}
                <div class="infor-user" id="{{user.id}}">
                    <h3>{{user.name}}</h3>
                    <p>{{user.email}}</p>
                    <div class="actions-user">
                        <a class="" href="/admin/users/{{user.id}}/edit">Editar</a> 
                        <a class="" href="/admin/recipes/details/{{user.id}}">Remover</a> 
                    </div>
                </div>
             {%endfor%}
            </div>
    </section>


{% endblock content %}


