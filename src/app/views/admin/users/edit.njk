{% extends "admin/layoutAdmin.njk" %}

{% block filter %}
    <div class="filter">
       <form action="/buscar" method="GET">
            <input type="text" placeholder="Receita ou Chef" name="filter" value="{{filter}}">
            <button type="submit">Buscar</button>
        </form>
    </div>
{% endblock filter %}


{% block content %}

<section class="container user-edit form">

    <form  method ="POST" action="/admin/users/edit?_method=PUT" enctype="multipart/form-data">
        <div class="header">
            <h1>{{user.name}}</h1>
            <button class="button" type ="submit">Salvar</button>
         </div>

        <div class="fields">
            {%include "admin/users/fields.njk" %}
        </div>
        
    </form>
</section>


{% endblock  %}