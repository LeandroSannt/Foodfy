
        <div class="item">
            <div>Nome</div>
            <div class="input">
                <input 
                    type="text"
                    name="name"
                    placeholder ="Digite seu nome completo"
                    value="{{user.name}}" >
            </div>
        </div>

        <div class="item">
            <div>Email</div>
            <div class="input">
                <input 
                    type="text"
                    name="email"
                    placeholder ="Digite seu email"
                    value="{{user.email}}"
                    onblur="Validate.apply(this,'isEmail')" >
            </div>
        </div>

        <div class="item">
            <div>Senha</div>
            <div class="input">
                <input 
                    type="password"
                    name="password"
                    {%if not user.id%} 
                    placeholder ="Escolha uma senha segura"
                    {%else%}
                    placeholder ="Digite sua senha para atualizar"
                    {%endif%}
                    
                    >
            </div>
        </div>

        {%if not user.id%}

        <div class="item">
            <div>Repetir Senha</div>
            <div class="input">
                <input 
                    type="password"
                    name="passwordRepeat"
                    placeholder ="Repita a senha "
                     >
            </div>
        </div>

        {%endif%}

