{% extends "admin/layoutAdmin.njk" %}

{% block content %}

<div class ="card">
    <form  method ="POST" action="/admin/chefs?_method=PUT"  enctype="multipart/form-data">
    <section class="title">
        <div class="cabecalho">
            <h1>Editando Receita</h1>
            <div class="form_position">
                <button class="save" type="submit">Salvar chef</button>
                <button class="delete" form="form-delete" type="submit">Deletar</button> 
            </div>
        </div>
        <aside class="receitas">
            {%include "admin/chefs/fields.njk" %}   
                <input type="hidden" name="id" value="{{chefs.id}}">
            
        </aside>
    </section>  
</form>

<form id="form-delete"   method="POST" action="/admin/chefs?_method=DELETE">
    <input type="hidden" name="id" value ={{chefs.id}}>        
</form>
{% endblock content %}

{% block confirmDelete %}
    <script>
        const formDelete= document.querySelector("#form-delete")
        formDelete.addEventListener("submit",function(event){
            const confirmation = confirm("Deseja deletar a receita ?")
            if(!confirmation){
                event.preventDefault()
        }
    })
    </script>

{% endblock confirmDelete %}

