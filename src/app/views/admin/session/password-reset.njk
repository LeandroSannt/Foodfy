{% extends "foodfy/layout.njk" %}

{% block content %}
    <section class="container user-register form">
        <form class ="card" method ="POST" action="/admin/password-reset" >
            <div class="header">
                <h3>Nova senha</h3>
            </div>
            <div class="fields">
                {%include "admin/session/reset-fields.njk" %}
            </div>
            <div class="buttons">
                <button class="button" type ="submit">Atualizar senha</button>
            </div>
            <input type="hidden" name="token" value = "{{token}}">
        </form>
    </section>
{% endblock  %}