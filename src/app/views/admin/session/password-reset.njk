{% extends "foodfy/layout.njk" %}

{% block filter %}
    <div class="filter">
       <form action="/buscar" method="GET">
            <input type="text" placeholder="Receita ou Chef" name="filter" value="{{filter}}">
            <button type="submit">Buscar</button>
        </form>
    </div>
{% endblock filter %}
{% block content %}

<section class="container user-register form">

<form class ="card" method ="POST" action="/admin/password-reset" >
        <div class="header">
            <h3>Nova senha</h3>
         </div>

        <div class="fields">
            {%include "admin/session/reset-fields.njk" %}
        </div>
        
        <div class="buttons">
            <button class="button" type ="submit">Atualizar senha</button>
        </div>
    </form>
</section>

{% endblock  %}