{% extends "foodfy/layout.njk" %}

{% block filter %}
    <div class="filter">
       <form action="/buscar" method="GET">
            <input type="text" placeholder="Receita ou Chef" name="filter" value="{{filter}}">
            <button type="submit">Buscar</button>
        </form>
    </div>
{% endblock filter %}
{% block content %}

<section class="container user-register form">

<form class ="card" method ="POST" action="/admin/forgot-password" >
        <div class="header">
            <h3>Esqueceu a senha ?</h3>
         </div>

        <div class="fields">
            <div class="item">
            <div>Email</div>
            <div class="input">
                
                <input 
                    type="email"
                    name="email"
                    placeholder ="Digite seu email"
                    value="{{user.email}}"
                    onblur="Validate.apply(this,'isEmail')"
                     >
            </div>
        </div>
        </div>
        
        <div class="buttons">
            <a href = "#"> <img src="/icons/arrow-left.svg" alt="arrow"></a>

            <button class="button" type ="submit">Recuperar senha</button>
        </div>
    </form>
</section>


{% endblock  %}