                        {% endfor %}
                    </ul>
                </div>

                <div class="ingredientes">
                    <div class="btn">
                        <h2 class="ingre">Modo de preparo</h2>
                        <span class="">ESCONDER</span>
                    </div>
                    <ul class=" lista">
                        {% for preparation in recipes.preparation %}
                            <li>{{preparation}}</li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="ingredientes">
